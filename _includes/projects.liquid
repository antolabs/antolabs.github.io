<div class="col">
  <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}" style="text-decoration: none;">
    <div class="card h-100 hoverable" style="border: 1px solid var(--global-divider-color);">
      <div class="card-body" style="padding: 0.75rem;">
        {% if project.year %}
          <div style="color: #2698BA; font-size: 0.8rem; font-weight: 500; margin-bottom: 0.25rem;">({{ project.year }})</div>
        {% endif %}
        <div style="font-size: 0.95rem; font-weight: 500; color: var(--global-text-color);">{{ project.title }}</div>
      </div>
    </div>
  </a>
</div>

